			margin-left 10px
			font-size 16px
			line-height 16px
	.js-header--right
		flexCenter()
		width 100%
		justify-content flex-end
		flex-wrap wrap
		text-align right
		p
			font-size 20px
			line-height 22px
		a
			width 100%
			text-decoration none
			cursor pointer
			font-size 18px
			font-family $medium
			color $default
	&.js-relative
		position relative
		color #000000
		box-shadow 1px 2px 3px rgba(0,0,0,.2)
	&.js-fixed
		background-color #FFFFFF
		color #000000
		box-shadow 1px 2px 3px rgba(0,0,0,.2)
	&.js-header--login
		color #000000
		padding 35px
.js-idioma
	.btn-group
		width 100% !important
		max-width 180px;
		button
			background-color transparent !important
			color #FFFFFF !important
			border none
			box-shadow none !important
			outline 0 !important
.navbar-default
	background-color #FFFFFF
	margin 0
	position fixed
	top 0
	z-index 10
	width 100%
	padding 18px 0
	border-radius 0
	box-shadow 0 2px 5px 0 rgba(0,0,0,0.16), 0 2px 10px 0 rgba(0,0,0,0.12)
	.navbar-right
		flexCenter()
.js-container
	transitionMaxWidth()
	width 100%
	max-width 1100px
	height 100%
	justify-content center
	margin auto
	flex-direction column
	position relative
.js-fondo--login
	absolute()
	background url(../img/fondo/fondo-login.jpg) no-repeat center center
	background-size cover
	height 100vh
#programa
	color #FFFFFF
	.js-fondo--programa
		absolute()
		background url(../img/fondo/fondo-header.png) top right no-repeat
		background-size cover
.js-contenido
	background-color $secondary
	.js-contenido__left
		transitionMaxWidth()
		display inline-block
		width 100%
		max-width 320px
		vertical-align top
		padding 25px
		h2
			margin 0 0 10px 0
		p
			margin 10px 0
			line-height 20px
	.js-contenido__right
		display inline-block
		vertical-align top
		width 100%
		max-width -webkit-calc(100% - 325px)
		max-width -moz-calc(100% - 325px)
		max-width -ms-calc(100% - 325px)
		max-width -o-calc(100% - 325px)
		max-width calc(100% - 325px)
		.js-contenido--imagen
			img
				width 100%
		.js-contenido--texto
			p
				font-size 20px
				margin 20px 0 0 0
#principal
	.js-select
		margin 10px
		width 100%
		max-width 250px
		.filter-option
			overflow hidden
			text-overflow ellipsis
			white-space nowrap
.js-cards
	flexStart()
	flex-wrap wrap
	justify-content center
	.js-card--partner
		transition all .5s linear
		box-shadow 5px 5px 10px rgba(0, 0, 0, 0.2)
		background-color #FFFFFF
		max-width 345px
		width 100%
		margin 10px
		padding 10px 20px
		position relative
		&.js-scale
			-webkit-transform scale(0)
			-moz-transform scale(0)
			-ms-transform scale(0)
			-o-transform scale(0)
			transform scale(0)
		.js-hide
			height 75px
			overflow hidden
			&.js-height
				height 100%
				overflow inherit
		.js-card--partner__button
			text-align center
			button
				transition all .2s linear
				&.rotate 
					background-color #FF8300 !important
					transform rotate(180deg)
					i
						color #FFFFFF
				&:focus
					background-color transparent
		.js-card--partner__front
			float left
			position relative
			z-index 5
			width 100%
			.js-card--partner__imagen
				flexCenter()
				justify-content flex-start
				text-align center
				height 60px
				img
					max-width 100px
					width 100%
					cursor pointer
			.js-card--partner__contenido
				padding 0
				height 260px
				p
					line-height 18px
					font-size 13px
					color #757575
					strong
						font-weight 100
						font-family $bold
.js-contenido--filtro
	flexCenter()
	margin 20px 0 30px 0
.js-card--partner__footer
	border-top 1px solid #000000
	flexCenter()
	.js-card--footer__texto
		margin 10px 0
		p
			margin 0
			line-height 14px
			font-size 12px
			strong
				font-weight 100
				font-family $bold
	.js--card--footer__contact
		flexCenter()
		height 70px
		border-left 1px solid #000000
.js-partner
	.js-partner--imagen
		&::after
			absolute()
			background-color #000000
			opacity .5
			z-index 0
			height 100%
			width 100%
			content ''
	.js-partner--contenido
		position absolute
		text-align center
		color #FFFFFF
		max-width 800px
		h2
			font-size 40px
		p
			font-size 20px
			font-family $light
		a
			color $default
			font-size 18px
			font-family $light
			line-height 16px
			i
				vertical-align middle
				color $default
				margin-right 5px
.js-contacto
	h2
		color #646569
		font-size 40px
		font-family $light
		margin 20px 0
.js-input
	padding 7px 20px
	height 72px
	border 1px solid rgba(0,0,0,0.15)
	background-color #FFFFFF
	margin-bottom -1px
	color #333333
	margin 5px 0
	&.js-date
		height 100%
		padding 5px 20px
		.js-icon
			width 100%
			max-width 36px
			text-align center
	&.js-radio
