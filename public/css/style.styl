					border 2px solid $default
			.mdl-radio__ripple-container 
				.mdl-ripple
					background $default
	&.js-select
		padding 0
		height 100%
		.bootstrap-select
			.dropdown-toggle
				padding 14px 24px
				border-radius 0
				box-shadow none
				background-color transparent
			.dropdown-menu
				background-color rgba(248, 248, 248, 0.95)
				border-radius 0
				margin 0 
				padding 0
				&.open
					margin 0
					padding 0
					li
						a
							padding 6px 20px
							&:hover
								background-color rgba(221,221,221,0.5)
	label
		font-family $light
		color #666666
		cursor pointer
	input
		display block
		height 36px
		width 100%
		border none
		font-size 16px
		&:focus
			outline 0
	&.input-focused
		background-color #FFFFFF
	.bootstrap-select
		width 100% !important
		.dropdown-toggle
			border none !important
			padding 6px 0
			selectTransparent()
			&:focus
				outline: 0 !important
.js-checkbox__title
	font-size 18px
	line-height 24px
	font-family $medium
	margin 15px 0
.js-checbox
	.mdl-checkbox__label
		font-size 14px
		line-height 18px
	.mdl-checkbox__focus-helper
	.mdl-checkbox__box-outline
		width 14px
		height 14px
	.mdl-checkbox__box-outline
		border 1px solid rgba(0,0,0,.54)
	.mdl-checkbox__ripple-container
		top -8px
		left -11px
		.mdl-ripple
			background $default
	.mdl-checkbox
		&.is-checked
			.mdl-checkbox__box-outline
				border 2px solid $default
			.mdl-checkbox__tick-outline
				background $default
.js-button
	margin 10px 0
	text-transform initial
	font-family $medium
	color #FFFFFF
	text-decoration none
	background-color $default !important
	border-radius 0
	font-size 18px
	box-shadow none
	border 2px solid $default
	margin 5px
	border-radius 4px
	line-height 30px
	&:hover
		color #FFFFFF
		text-decoration none
	&.js-button--default
		background-color transparent !important
		color #000000
	&.js-button--select
		background-color #FFFFFF !important
		border 1px solid rgba(0,0,0,0.15)
		color #999999
		font-family $regular
		font-size 14px
		border-radius 0
		height 48px
		i
			vertical-align middle
			position absolute
			right 5px
	&.js-button--login
		width 100%
		margin 20px 0
	&.js-button--icon
		flexCenter()
		height 30px
		line-height 26px
		font-size 14px
		i
			color #FFFFFF
			font-size 16px
			margin-left 10px
.js-ubication
