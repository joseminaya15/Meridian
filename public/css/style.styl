	top 0
	width 100%
	background-color transparent
	z-index 5
	padding 10px 25px
	color #FFFFFF
	flexCenter()
	img
		width 100%
		max-width 130px
	.js-header--left
		flexCenter()
		width 100%
		justify-content flex-start
		p
