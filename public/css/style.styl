	height 100%
/*TABLE*/
table
	&>thead
		&>tr
			&>th
				font-size 14px
table
	&>tbody
		&>tr
			&>td
				font-size 13px
				vertical-align middle !important
.table-responsive
	border none
	overflow-y hidden
.dt-button-background
	z-index 0 !important
/*SCROLL*/
::-webkit-scrollbar
	width 8px
	height 5px
::-webkit-scrollbar-track
	background-color transparent
	border-radius 10px
::-webkit-scrollbar-thumb
	background-color #AAAAAA
	border-radius 10px
@media ( max-width: 1000px )
	.js-partner 
		.js-partner--imagen
			&::after
				display none
		.js-partner--contenido
			position relative
			color #000000
			h2
				font-size 28px
				font-family $regular
			p
				font-size 16px
	.js-ubication
		flexStart()
		.js-ubication__left
			max-width calc(100% - 450px)
		.js-ubication__right
			max-width 450px
	#principal
		.js-select
			max-width 350px
			text-align left
@media ( max-width: 768px )
	.js-ubication
		flexStart()
		.js-ubication__left
			max-width calc(100% - 350px)
		.js-ubication__right
			max-width 350px
@media ( max-width: 600px )
	.js-cards 
		.js-card--partner 
			.js-card--partner__front 
				.js-card--partner__contenido
					padding 0
	.js-ubication
		display block
		.js-ubication__left
			position relative
			max-width 100%
			height 240px
		.js-ubication__right
			max-width 100%
			padding 20px 0
					