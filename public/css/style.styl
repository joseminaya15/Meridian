	padding 0
	font-family $regular
	color #000000
	background-color #F8F8F8
label
	font-weight 100
img
	width 100%
a
	text-decoration none !important
h3
	margin 20px 0
ol
	padding-left 25px
	&.js-letras
		list-style lower-alpha
	&.js-romanos
		list-style lower-roman
	li
		margin 10px 0	
.js-flex
	flexCenter()
.js-wrap
	flex-wrap wrap
.js-justify
